{
    "compilerOptions": {
        "target": "es5",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "baseUrl": ".",
        "paths": {
            "@components/*": ["src/components/*"],
            "@components": ["src/components"],
            "@commons/*": ["src/commons/*"],
            "@commons": ["src/commons"],
            "@interfaces/*": ["src/interfaces/*"],
            "@interfaces": ["src/interfaces"],
            "@hooks/*": ["src/hooks/*"],
            "@hooks": ["src/hooks"],
            "@helpers/*": ["src/helpers/*"],
            "@helpers": ["src/helpers"],
            "@icons/*": ["src/icons/*"],
            "@icons": ["src/icons"],
            "@public/*": ["public/*"],
            "@public": ["public"],
            "@styles/*": ["src/styles/*"],
            "@styles": ["src/styles"],
            "@i18n": ["./i18n"],
            "react": ["./node_modules/react"],
            "react-dom": ["./node_modules/react-dom"]
        },
        "incremental": true
    },
    "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
    "exclude": ["node_modules", "**/*.spec.ts", "**/*.test.ts"]
}
